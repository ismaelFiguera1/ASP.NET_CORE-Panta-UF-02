@model Cistell_de_la_compra.ViewModel.FacturaViewModel
<section>

    <div class="factura">
        <h1>Factura</h1>

        <table>
            <tr>
                <th>Codi producte</th>
                <th>Nom</th>
                <th>Quantitat</th>
                <th>Preu unitat</th>
                <th>Preu total unitat</th>
            </tr>
            @foreach (var item in Model.Elements)
            {
                <tr>
                    <td>@item.CodiProducte</td>
                    <td>@item.Nom</td>
                    <td>@item.Quantitat</td>
                    <td>@item.Preu</td>
                    <td>@item.PreuTotalElement</td>
                </tr>
            }


            <tr>
                <td><b>Preu Total:</b>            <b style="color:transparent">j</b></td>
                <td>@Model.preuTotal</td>
            </tr>
        </table>


    </div>
    
</section>