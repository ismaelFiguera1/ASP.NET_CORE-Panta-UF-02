<section class="p-section">
    <section>
        <div class="p-titol">
            <h1>Productes del Mercadona</h1>
        </div>
        
        <div>
            <div class="p-tenda">
                <table>

                    <!-- "Model" es converteix autamaticament en el model 
                    que li hem passat al controlador -->

                    @foreach (var producte in Model)
                    {
                        <tr>
                            <td>@producte.CodiProducte</td>
                            <td>@producte.Nom</td>
                            <td>@producte.Preu</td>
                        </tr>
                    }
                </table>
            </div>

        </div>
    </section>
    <div>b</div>
</section>
